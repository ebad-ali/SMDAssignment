<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/circle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="EA"
        android:textColor="#fff"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="Ebad Ali"
        android:textColor="#000"
        android:textSize="35sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignTop="@+id/circle_name"
        android:layout_toRightOf="@+id/circle_name"
        android:layout_toEndOf="@+id/circle_name" />

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="+92 313 5405894"
        android:textColor="#000"
        android:textSize="20sp"
        android:typeface="serif"
        android:layout_alignBaseline="@+id/circle_name"
        android:layout_alignBottom="@+id/circle_name"
        android:layout_alignLeft="@+id/user_name"
        android:layout_alignStart="@+id/user_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C8C8C8"/>
</RelativeLayout>